@model SteadyMedApiGateway.Models.PhysicianViewModels.PhysicianViewModel

@{
    ViewData["Title"] = "Physicians Home";
}

<!--Author: Justin & Craig
    This is the index page for physicians that will, eventually, show basic information about the physician, a list of clients
    and links to their pages, and other features to add new patients to their network.
-->
<div id="physician_panel" class="container-fluid">
    <!--
    <div class="row" id="physician_search_form">
        <form>
            <input id="search_box" type="text" name="search_text" />
            <input type="button" class="btn btn-default" id="search_button" value="Search" />
        </form>
    </div>
    -->
    <div class="row">
        <div class="col-md-4 col-md-offset-5">
            <h2>@Html.DisplayFor(model => model.Name)</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-5">
            <h4>Patients</h4>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Patients.First().ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patients.First().FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patients.First().LastName)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model.Patients)
            {
                <tr class="patientRow" onclick="location.href='@Url.Action("Details", "Patient", new { id = patient.ID, FirstName = patient.FirstName, LastName = patient.LastName })'">
                    <td>
                        @patient.ID
                    </td>
                    <td>
                        @patient.FirstName
                    </td>
                    <td>
                        @patient.LastName
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div id="debug_panel">
    <h3 id="debug_result"></h3>
</div>